@model IList<CarSystem.Web.Models.CarsMod.CarViewModel>
@Html.Partial("_NavbarTop")
<br />

<div class="container">
    <div class="row ">
        <div class="col-md-3 text-center">
            <h3>Brand</h3>
        </div>       
        <div class="col-md-3 text-center">
            <h3>Picture</h3>
        </div>
        <div class="col-md-2 text-center">
            <h3>CarModels</h3>
        </div>       
        <div class="col-md-2 text-center">
            <h3>Price</h3>
        </div>
        <div class="col-md-1 text-center">
            <h3>Year</h3>
        </div>

    </div>
</div>

<br />
<br />

@foreach (var car in Model)
{
    <div class="container">
        <div class="row ">
            <div class="col-md-3 text-center">
                <a href="@Url.Action("GetCar", "Car", new { car.Id }, null)">
                    <h4 class="text-center">@car.Brand @car.CarModel</h4>
                </a>
            </div>
            <div class="col-md-3 text-center">
                <img src="@Url.Content("~/Images/"+ @car.PicturePath)">
                @*<img class="img-fluid rounded mb-3 mb-md-0" src="~/Images/@car.CarModels.Name-@(car.Id % 10)-.jpg" style="width: 100%" alt="">*@
            </div>
            <div class="col-md-2 text-center">
                <h4>@car.CarModel</h4>
            </div>
            <div class="col-md-2 text-center">
                <h4>@car.Price lv.</h4>
            </div>
            <div class="col-md-1 text-center">
                <h4>@car.Year</h4>
            </div>
            <div class="col-md-1 text-center">

                @using (Html.BeginForm("Delete", "Car", new { car.Id }, FormMethod.Post))
                {
                    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this car @car.CarModel @car.Brand! Please login as an admin if you want to delete it!')" />
                }

            </div>
        </div>
    </div>
}
